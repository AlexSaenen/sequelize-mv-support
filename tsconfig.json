{
  "compilerOptions": {
      "baseUrl": ".",
      "declaration": true,
      "esModuleInterop": true,
      "lib": ["es6", "es2020", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "build",
      "sourceMap": true,
      "target": "es6",
      "paths": {
          "*": [
              "node_modules/*"
          ],
      }
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}